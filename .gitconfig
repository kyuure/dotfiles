[core]
  editor = vim
  excludesFile = ~/.gitignore
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto
[alias]
  st = status
  df = diff
  rs = restore
  cm = commit
  al = add --all .
  amend = commit --amend
  ck = checkout
  br = branch
  pl = !git pull origin `git branch --show-current`
  ps = !git push origin `git branch --show-current`
  open = !open `git remote get-url origin | sed 's|:|/|' | sed 's|git@|https://|' | sed 's|.git$||'`
  detail = !githist | peco | awk '{print $2}' | xargs -I {} git diff {}^ {}
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
  logs = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
  aliases = config --get-regexp alias
[url "https://:@/"]
  insteadOf = https:///
[init]
	templateDir = ~/.git-templates
[pull]
	rebase = true
