" Leader Map for vim
let mapleader = " " "now <leader> is same as <space> lols.


" to use Alt in insert mode
" source: https://vi.stackexchange.com/questions/2350/how-to-map-alt-key
execute "set <M-h>=\eh"
execute "set <M-j>=\ej"
execute "set <M-k>=\ek"
execute "set <M-l>=\el"


" Disable move using arrow in normal mode
nmap <Up> <Nop>
nmap <Down> <Nop>
nmap <Left> <Nop>
nmap <Right> <Nop>

" Move in insert mode
imap <M-h> <Left>
imap <M-j> <Down>
imap <M-k> <Up>
imap <M-l> <Right>

" Mark with ': m'
nmap <leader>m m'

" source: https://gitlab.com/T6705/dotfiles/-/blob/master/.config/nvim/mappings.vim
" Move to beginning/end of line
nmap H ^
nmap L $
vmap H ^
vmap L $
" keybind without going into default registry
nnoremap x "_x
nnoremap c "_c
vnoremap x "_d
vnoremap c "_c

" Change window
nmap <leader>h <C-w>h
nmap <leader>j <C-w>j
nmap <leader>k <C-w>k
nmap <leader>l <C-w>l

" Split window
nmap <leader>sl :vsplit<CR> <C-w>w
nmap <leader>sj :split<CR> <C-w>w
nmap <leader>t :term<CR><C-w>k :resize 25<CR>

" Exit
nmap <leader>q :q<CR>
" Newtab and explore
nmap <leader>n :tabnew<bar> :Ex<CR>
" Switch tab
nmap <Tab> :tabnext<CR>

" Delete without yank
" Replace all: %s/old/new/g 
nmap <leader>c :%s//g<Left><Left>

" Connecting yank and clipboard on WSL
" source: https://stackoverflow.com/a/46995591 (see Edit 2)
autocmd TextYankPost * call system('echo '.shellescape(join(v:event.regcontents, "\<CR>")).' |  clip.exe')
" Yank all, need vim-gnome
nmap <leader>y :%y+

" Fold code block uses curly braces
nmap <leader>z zfa}

" Open fzf
nmap <leader>f :Files ./<CR>
" Lines fzf
nmap <leader>w :BLines<CR>
imap <C-W> <plug>(fzf-complete-line)


" Show coc-explorer
nmap <leader>e :CocCommand explorer <CR>
" auto exit when explorer the only buffer
autocmd BufEnter * if (winnr("$") == 1 && &filetype == 'coc-explorer') | q | endif

" netrw. Show explorer on new split window
nmap <leader>o :Vexplore<CR>
nmap <leader>p :Ex<CR>
"autocmd VimEnter * if argc() == 0 | Explore! | endif
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_winsize = 50
