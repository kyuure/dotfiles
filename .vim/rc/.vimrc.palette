set t_Co=256

" cursor line
set cursorline
highlight CursorLine ctermbg=16 cterm=NONE

" color column
highlight ColorColumn ctermbg=238

" don't change the background >:(;
highlight Normal ctermbg=NONE guibg=NONE

highlight LineNr ctermfg=Magenta
highlight Statement ctermfg=Yellow
highlight Identifier ctermfg=Blue
highlight Comment ctermfg=DarkGrey cterm=italic

"highlight Visual cterm=reverse ctermbg=Black
highlight Visual ctermbg=16
highlight Search ctermbg=Grey ctermfg=Black
highlight SpecialKey ctermfg=233
highlight Folded ctermbg=Black ctermfg=Green

highlight Pmenu ctermbg=NONE ctermfg=White
highlight PmenuSel ctermbg=16 ctermfg=White
highlight PmenuKind ctermbg=NONE ctermfg=DarkYellow
highlight PmenuKindSel ctermbg=16 ctermfg=DarkYellow
highlight PmenuExtra ctermbg=NONE ctermfg=Magenta
highlight PmenuExtraSel ctermbg=16 ctermfg=Magenta
highlight PmenuSbar ctermbg=DarkGrey
highlight PmenuThumb ctermbg=Grey

" for vim-fugitive
highlight DiffAdd ctermbg=DarkGrey ctermfg=DarkGreen cterm=bold
highlight DiffChange ctermbg=DarkGrey ctermfg=NONE
highlight DiffDelete ctermbg=DarkGrey ctermfg=DarkRed cterm=bold
highlight DiffText ctermbg=DarkYellow ctermfg=NONE cterm=bold

" for coc.nvim
highlight CocFloating ctermbg=Black

" for golang
let g:go_highlight_types = 1
let g:go_highlight_fields = 1
let g:go_highlight_functions = 1
let g:go_highlight_function_calls = 1
let g:go_highlight_extra_types = 1
let g:go_highlight_methods = 1
let g:go_highlight_operators = 1
let g:go_highlight_build_constraints = 1
let g:go_highlight_structs = 1
let g:go_highlight_generate_tags = 1
let g:go_highlight_space_tab_error = 0
let g:go_highlight_array_whitespace_error = 0
let g:go_highlight_trailing_whitespace_error = 0
let g:go_highlight_extra_types = 1
