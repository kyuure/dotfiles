        return strlen(l:branch) ? (strlen(l:branch) <= 9 ? 'î‚  ' . l:branch : 'î‚ ') : l:icon
    endif

    return winwidth(0) >= 65 ? (strlen(&filetype) ? l:icon .' '. &filetype : l:icon) : l:icon
endfunction
